{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "diagnostics": true,
    "emitDecoratorMetadata":true,
    "declarationDir": "./build",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "*": ["build/*"]
    },
  },
  "exclude": ["node_modules", "dist", "**/*.js", "lib"],
}
